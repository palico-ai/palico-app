{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "CommonJS",
    "declaration": true,
    "target": "es2021",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}